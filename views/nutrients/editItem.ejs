<%- layout('layouts/boilerplate')%>
<form action="/items/<%= item._id %>?_method=PUT" method="POST">
  <div class="form-group mt-3">
    <label for="name">Name:</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="<%=item.name %>"
      required
    />
  </div>
  <div class="form-group mt-3">
    <label for="category">Category: </label>
    <select
      class="form-control"
      id="category"
      name="category"
      value="<%=item.category %>"
      required
    >
      <% for(category of categories) { %>
      <option><%-category.name%></option>
      <% } %>
    </select>
  </div>
  <div class="form-group mt-3">
    <label for="price">Price:</label>
    <input
      type="text"
      class="form-control"
      id="price"
      name="price"
      value="<%=item.price %>"
      required
    />
  </div>
  <div class="form-group mt-3">
    <label for="inStock">Quantity:</label>
    <input
      type="text"
      class="form-control"
      id="inStock"
      name="inStock"
      value="<%=item.inStock %>"
      required
    />
  </div>
  <div class="form-group mt-3">
    <label for="description">Description: </label>
    <textarea class="form-control" id="description" rows="3" name="description">
<%=item.description %></textarea
    >
  </div>
  <button type="submit" class="btn btn-primary mt-3 mb-3">Edit Item</button>
</form>
<a href="/items/<%= item._id %>">Back to item</a>
