<%- layout('layouts/boilerplate')%>
<div class="container mt-5 mb-5 show_item">
  <h2><%- item.name %></h2>
  <div><b>Description:</b></div>
  <p><%- item.description %></p>
  <div><b>Price:</b> <%- item.price %>$</div>
  <div><b>In stock: </b><%- item.inStock %></div>
  <div>
    <b>Category: </b><a href="/categories/items"><%- item.category %></a>
  </div>
  <form action="/items/<%=item._id%>?_method=DELETE" method="POST" class="mt-3">
    <a class="btn btn-primary" href="/items/<%= item._id %>/edit">Edit</a>
    <button class="btn btn-danger">Delete</button>
  </form>
</div>
